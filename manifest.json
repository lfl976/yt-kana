{
	"manifest_version": 3,
	"name": "YouTube Kana",
	"version": "1.0",
	"description": "Add phonetic annotations (hiragana) to Japanese subtitles for YouTube.",
	"permissions": ["tabs"],
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "icons/a-16.png",
		"32": "icons/a-32.png",
		"48": "icons/a-48.png",
		"128": "icons/a-128.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/a-16.png",
			"32": "icons/a-32.png",
			"48": "icons/a-48.png",
			"128": "icons/a-128.png"
		}
	}
}
